<Window x:Class="Project.View.ShopPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.View"
        mc:Ignorable="d"
        Title="ShopPage" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>

        <DataGrid Grid.Row="1" Margin="0 40 0 0" ItemsSource="{Binding products}" AutoGenerateColumns="False" ColumnWidth="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}"></DataGridTextColumn>

            </DataGrid.Columns>

        </DataGrid>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Height="30" Width="63"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="714,5,0,0" VerticalAlignment="Top" Height="30" Width="63"/>
    </Grid>
</Window>